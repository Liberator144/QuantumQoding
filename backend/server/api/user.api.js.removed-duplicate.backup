/**
 * User API
 *
 * This module defines the user management API endpoints.
 *
 * @version 1.0.0
 */
import { protect, restrictTo } from '../middleware/auth';
import * as userController from '../controllers/user.controller';
import { logger } from '../utils/logger';
/**
 * Setup user API endpoints
 */
export const setupUserAPI = (app) => {
    const basePath = '/api/v1/users';
    logger.info(`Setting up user API endpoints at ${basePath}`);
    // Get all users (admin only)
    app.get(`${basePath}`, protect, restrictTo('admin'), userController.getAllUsers);
    // Get user by ID
    app.get(`${basePath}/:id`, protect, userController.getUserById);
    // Create a new user (admin only)
    app.post(`${basePath}`, protect, restrictTo('admin'), userController.createUser);
    // Update user
    app.put(`${basePath}/:id`, protect, userController.updateUser);
    // Delete user
    app.delete(`${basePath}/:id`, protect, userController.deleteUser);
    // Get user quantum states
    app.get(`${basePath}/:id/quantum-states`, protect, userController.getUserQuantumStates);
    // Get user consciousness streams
    app.get(`${basePath}/:id/consciousness-streams`, protect, userController.getUserConsciousnessStreams);
    // Get user neural fabric nodes
    app.get(`${basePath}/:id/neural-fabric-nodes`, protect, userController.getUserNeuralFabricNodes);
    // Get user dimensional boundaries
    app.get(`${basePath}/:id/dimensional-boundaries`, protect, userController.getUserDimensionalBoundaries);
    // Get user activity log
    app.get(`${basePath}/:id/activity-log`, protect, userController.getUserActivityLog);
    // Update user preferences
    app.put(`${basePath}/:id/preferences`, protect, userController.updateUserPreferences);
    // Get user permissions
    app.get(`${basePath}/:id/permissions`, protect, userController.getUserPermissions);
    // Update user permissions (admin only)
    app.put(`${basePath}/:id/permissions`, protect, restrictTo('admin'), userController.updateUserPermissions);
    logger.info(`User API endpoints setup complete`);
};
export default setupUserAPI;
