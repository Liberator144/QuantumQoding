{
  "name": "qq-verse",
  "version": "0.1.0",
  "description": "Quantum-inspired cosmic visualization interface",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:report": "node backend/tools/lint-report.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "tsc",
    "dev": "cd frontend && npm run dev",
    "prepare": "husky install",
    "docs:enhance": "ts-node backend/tools/doc-enhancer/cli.ts",
    "docs:generate": "typedoc --out docs/api --entryPointStrategy expand ./backend"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.21",
    "@types/three": "^0.176.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.12",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "immer": "^10.0.3",
    "nanoid": "^5.0.6",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
